{
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "module"
    },
    "rules": {
        "indent": "off",
        "no-undef": "warn",
        "no-redeclare": "warn",
        "no-var": "warn",
        "no-unused-vars":"off" // we define stuff to use in other scripts
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "btoa": "writable",
        "Espruino": "writable",
        "Puck": "readonly",
        "heatshrink": "readonly",
        "Promise": "readonly",
        "AppInfo": "readonly",
        "Uint8Array" : "readonly"
     }
}
